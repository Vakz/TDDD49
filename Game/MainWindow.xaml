<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dc="clr-namespace:Game.UI"
        Title="MainWindow" Height="Auto" Width="Auto">
    <DockPanel Height="Auto" Margin="0,0,0,0" VerticalAlignment="Top" Width="Auto">
        <Menu x:Name="Menu" DockPanel.Dock="Top">
            <MenuItem x:Name="FileMenuItem" Header="_File">
                <MenuItem x:Name="NewGameButton" Header="_New Game"></MenuItem>
                <MenuItem Header="_Settings"></MenuItem>
                <MenuItem Header="_Close"></MenuItem>
            </MenuItem>
        </Menu>
        <dc:GameCanvas x:Name="BoardCanvas" Width="1550" Height="1150" DockPanel.Dock="Top" />
    </DockPanel>
</Window>
