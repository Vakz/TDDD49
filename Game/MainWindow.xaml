<!-- H:3 for menu -->
<!-- W:32 H:22 -->
<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="834">
    <DockPanel Height="Auto" Margin="0,0,0,0" VerticalAlignment="Top" Width="Auto">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New Game"></MenuItem>
                <MenuItem Header="_Settings"></MenuItem>
                <MenuItem Header="_Close"></MenuItem>
            </MenuItem>
        </Menu>
        <Canvas x:Name="BoardCanvas" Width="Auto" DockPanel.Dock="Top" />
    </DockPanel>
</Window>
